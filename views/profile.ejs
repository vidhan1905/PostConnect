<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full justify-end flex">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Logout</a>
        </div>
        <h3 class="3xl mb-5">Hello, <%= user.name %></h3>
        <h5 class="mb-5">Create a new post</h5>
        <form method="post" action="/post">
            <textarea placeholder="What's on your mind ?" class="block p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md outline-none" name="content"></textarea>
            <input class="mt-4 px-3 py-2 w-40 bg-blue-500 block rounded-md" type="submit" value="Create Post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post rounded-md mb-4 w-1/3 p-4 border-2 border-zinc-700 bg-zinc-800">
                        <h4 class="text-blue-400 mb-2"><%= user.username %></h4>
                        <p class="text-sm"><%= post.content %></p>
                        <small class="mt-2 inline-block"><%= post.likes.length %> likes</small>
                        <div class="btns flex gap-4 mt-1">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id) ? "Like" : "Unlike" %>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>